{

  "manifest_version": 2,
  "name": "jobify",
  "version": "1.0",

  "description": "Adiciona un borde rojo a todas las paginas que calcen con mozilla.org.",

  "icons": {
    "48": "icons/iconfinder_black-tie_1608578.png"
  },

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "content_scripts": [
    {
    "matches": ["https://www.glassdoor.com/*"],
    "js": ["jquery.min.js"]
  }],

  "sidebar_action": {
  "default_title": "My sidebar",
  "default_panel": "sidebar/sidebar.html",
  "default_icon": "icons/iconfinder_black-tie_1608578.png",
  "open_at_install": false
},

  "browser_action": {
      "default_icon": "icons/iconfinder_black-tie_1608578.png"
    },

  "background": {
      "scripts": ["background.js"]
    },

    "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net https://code.jquery.com https://cdnjs.cloudflare.com/ https://stackpath.bootstrapcdn.com; object-src 'self';"
}
